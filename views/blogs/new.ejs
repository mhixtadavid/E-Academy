<%- include("../partials/bloghead") %>

<style>
    body {font-family: Arial, Helvetica, sans-serif;}
* {box-sizing: border-box;}

input[type=text], [type=file], textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  margin-top: 6px;
  margin-bottom: 16px;
  resize: vertical;
}

input[type=submit] {
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.container.one {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
}

h3 {
    text-align: center;
    color: dodgerblue;
    text-transform: uppercase;
    letter-spacing: 3px;
    padding: 40px;
    margin: 20px;
}

</style>

<h3>
    Create A New Blog
</h3>

<div class="container one">
  <form action="/blogs" enctype="multipart/form-data" method="POST">
    <label for="name">Blog Title</label>
    <input type="text" name="name" placeholder="Blog Title...">

    <label for="image">Image</label>
    <input type="file" name="image">

    <label for="subject">Description</label>
    <textarea name="description" placeholder="Write something.." style="height:200px"></textarea>
    
    <label for="markdown">Markdown</label>
    <textarea name="markdown" placeholder="Write something.." style="height:200px"></textarea>

    <a href="/blogs" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
  </form>
</div>



