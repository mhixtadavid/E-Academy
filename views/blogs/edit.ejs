<%- include("../partials/bloghead") %>

<style>
    body {font-family: Arial, Helvetica, sans-serif;}
* {box-sizing: border-box;}

input[type=text], [type=file], textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  margin-top: 6px;
  margin-bottom: 16px;
  resize: vertical;
}

input[type=submit] {
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.container.one {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
}

h3 {
    text-align: center;
    color: dodgerblue;
    text-transform: uppercase;
    letter-spacing: 3px;
    padding: 40px;
    margin: 20px;
}

</style>

<h3>
    Edit <%- blog.name %>
</h3>

<div class="container one">
  <form action="/blogs/<%- blog.slug %>?_method=PUT" enctype="multipart/form-data" method="POST">
    <label for="name">Blog Title</label>
    <input type="text" value="<%- blog.name %>" name="blog[name]">

    <label for="image">Image</label>
    <input type="file" value="<%- blog.image %>" name="blog[image]">

    <label for="subject">Description</label>
    <textarea name="blog[description]" style="height:200px"><%- blog.description %></textarea>
    
    <label for="markdown">Markdown</label>
    <textarea name="blog[markdown]" style="height:200px"><%- blog.markdown %></textarea>

    <a href="/blogs" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
  </form>
</div>



<%- include("../partials/foot") %>